---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.png";
import examplAvatar from "../assets/examplAvatar.png";
---

<section class="w-full">
    <div class="flex w-full justify-between items-start mb-10">
        <h1 class="text-[45px] font-semibold">Profile</h1>
        <div class="flex gap-[25px]">
            <Image src={avatar} alt="" />
            <Image src={examplAvatar} height="120" width="120" alt="" />
        </div>
    </div>

    <form class="flex flex-wrap justify-between">
        <div class="w-fit">
            <label for="firstName" class="block text-2xl mb-4 font-semibold"
                >First Name</label
            >
            <input
                type="text"
                id="firstName"
                placeholder="Mehrab"
                class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-fit">
            <label for="firstName" class="block text-2xl mb-4 font-semibold"
                >Last Name</label
            >
            <input
                type="text"
                id="firstName"
                placeholder="Bozorgi"
                class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-full mt-8">
            <label for="firstName" class="block text-2xl mb-4 font-semibold">Email</label>
            <input
                type="email"
                id="firstName"
                placeholder="Mehrabbozorgi.business@gmail.com"
                class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-full mt-8">
            <label for="firstName" class="block text-2xl mb-4 font-semibold">Address</label
            >
            <input
                type="text"
                id="firstName"
                placeholder="33062 Zboncak isle"
                class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-full mt-8">
            <label for="firstName" class="block text-2xl mb-4 font-semibold"
                >Contact Number</label
            >
            <input
                type="text"
                id="58077.79"
                placeholder="Mehrab"
                class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-full mt-8">
            <label for="firstName" class="block text-2xl mb-4 font-semibold">City</label>
            <input
                type="text"
                id="firstName"
                placeholder="Mehrab"
                class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>

        <div class="w-full mt-8">
            <label for="firstName" class="block text-2xl mb-4 font-semibold"
                >Password</label
            >
            <input
                type="password"
                id="firstName"
                placeholder="sbdfbnd65sfdvb s"
                class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
            />
        </div>
    </form>

    <div class="flex mt-[87px] gap-7 justify-end">
        <button
            class="flex items-center justify-center border-2 border-black text-[28px] py-[5px] px-[60px] gap-5 rounded-[7px]"
        >
            Cancel
        </button>

        <button
            class="flex items-center justify-center text-[28px] font-semibold text-white py-[5px] px-[60px] gap-5 rounded-[7px] bg-black"
        >
            Save
        </button>
    </div>
</section>

<style is:global>
    @import "../../src/styles/global.css";
</style>
