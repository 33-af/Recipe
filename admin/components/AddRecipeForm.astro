---
import { Image } from "astro:assets";
import uploadIcon from "../assets/uploadIcon.png";
---

<section class="w-full min-h-screen">
    <form>
        <div>
            <label
                for="file-upload"
                class="flex flex-col items-end w-full cursor-pointer"
            >
                <input type="file" id="file-upload" class="hidden" />
                <Image src={uploadIcon} alt="Upload" />
            </label>
        </div>

        <div class="flex flex-wrap justify-between">
            <div class="w-full mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Proteins</label
                >
                <input
                    type="text"
                    id="firstName"
                    placeholder="Proteins"
                    class="block text-[20px] w-full rounded-[5px] mt-2 text-[#858585] py-3 px-8 border border-[#858585]"
                />
            </div>

            <div class="w-fit mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Proteins</label
                >
                <input
                    type="text"
                    id="firstName"
                    placeholder="Proteins"
                    class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
                />
            </div>

            <div class="w-fit mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Total Fat
                </label>
                <input
                    type="text"
                    id="firstName"
                    placeholder="Total Fat"
                    class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
                />
            </div>

            <div class="w-fit mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Carbohydrate
                </label>
                <input
                    type="text"
                    id="firstName"
                    placeholder="Carbohydrate"
                    class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
                />
            </div>

            <div class="w-fit mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Calories
                </label>
                <input
                    type="text"
                    id="firstName"
                    placeholder="Calories"
                    class="block text-[20px] rounded-[5px] mt-2 w-120 text-[#858585] py-3 px-8 border border-[#858585]"
                />
            </div>
            <div class="w-full mt-8">
                <label for="firstName" class="block text-2xl mb-4 font-semibold"
                    >Description of the recipe</label
                >
                <textarea
                    id="firstName"
                    placeholder="Start to write the description"
                    class="block text-[20px] w-full rounded-[5px] mt-2 h-55 text-[#858585] py-5 px-8 border border-[#858585]"
                ></textarea>
            </div>
        </div>
    </form>

    <div class="flex justify-end">
        <button
            class="flex items-center justify-center mt-15 text-[28px] font-semibold text-white py-[5px] px-[60px] gap-5 rounded-[7px] bg-black"
        >
            Save
        </button>
    </div>
</section>

<style is:global>
    @import "../../src/styles/global.css";
</style>
