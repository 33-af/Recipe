---
import { Image } from "astro:assets";
import email from "../assets/email.svg";
import password from "../assets/password.svg";
import exit from "../assets/exit.png";
import SubmitButton from "../components/SubmitButton.astro";
---

<section class="flex justify-center container-layout">
    <div
        class="fixed inset-0 bg-[#424242]/66 flex items-center justify-center z-50"
    >
        <div
            class="bg-white rounded-3xl py-[90px] px-[67px] w-full max-w-[740px] shadow-2xl"
        >
            <h1 class="text-[48px] font-semibold text-center">Welcome Back</h1>
            <p class="text-[20px] font-semibold text-center mt-6">
                Welcome Back! We're glad to see you again.
            </p>

            <form>
                <div class="flex flex-col gap-[17px] mt-10 mb-5 relative">
                    <label for="email" class="block">Email</label>
                    <input
                        type="email"
                        id="email"
                        placeholder="Your email"
                        class="border border-black
                        rounded-[11px]
                        w-full py-3 px-12 placeholder:text-black placeholder:text-[16px]"
                    />

                    <div class="absolute top-14.5 left-5">
                        <Image src={email} alt="" />
                    </div>
                </div>

                <div class="flex flex-col gap-[17px] relative">
                    <label for="email" class="block">Password</label>
                    <input
                        type="password"
                        id="email"
                        placeholder="Your Password"
                        class="border border-black
                        rounded-[11px]
                        w-full py-3 px-12 placeholder:text-black placeholder:text-[16px]"
                    />

                    <div class="absolute top-13.5 left-5">
                        <Image src={password} alt="" />
                    </div>
                </div>
            </form>

            <div class="text-[16px] font-semibold mt-6 mb-16">
                Donâ€™t have an account? <a href="">Sign up</a>
            </div>

            <div class="flex justify-center">
                <SubmitButton text="Login" image={exit} imageAlt="exit" />
            </div>
        </div>
    </div>
</section>

<style is:global>
    @import "../styles/global.css";
</style>
