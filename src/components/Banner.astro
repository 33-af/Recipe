---
import { Image } from "astro:assets";
import BannerImage from "../assets/banner-Image.png";
import TimerIm from "../assets/Timer.png";
import ForkIm from "../assets/ForkKnife.png";
import Avatar from "../assets/chefAvatar.png";
import Badge from "../assets/Badge.png";
import watchIcon from "../assets/wathcIcon.png";
---

<section class="w-full mb-40">
  <div class="flex-center">
    <div class="bg-[#E7F9FD] h-[600px] w-10 rounded-br-full rounded-tr-full">
    </div>
    <div class="container-layout h-[640px] flex-center relative">
      <Image src={Badge} width={150} height={150} alt="badge-image" class="absolute top-[50px] left-50%" />

      <div
        class="bg-[#E7FAFE] w-[620px] h-full rounded-tl-[90px] rounded-bl-[90px]"
      >
        <div class="py-[50px] px-[50px]">
          <div class="flex-center bg-white w-40 rounded-[20px] py-3 px-5 mb-8">
            <svg
              fill="#000000"
              height="24px"
              width="24px"
              version="1.1"
              id="Capa_1"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
              viewBox="0 0 196.979 196.979"
              xml:space="preserve"
              ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
                <g>
                  <path
                    d="M43.48,0C28.1,0.003,15.588,12.517,15.588,27.896v141.188c0,15.38,12.512,27.894,27.893,27.896h131.66 c3.452,0,6.25-2.798,6.25-6.25v-21.646v-21.646V49.542V6.25c0-3.452-2.798-6.25-6.25-6.25H43.48z M43.481,12.5h125.41v37.042 v91.645H43.48c-5.687,0.001-10.978,1.716-15.392,4.649V27.896C28.088,19.408,34.994,12.501,43.481,12.5z M168.891,184.479H43.482 c-8.488-0.001-15.394-6.908-15.394-15.396c0-8.488,6.905-15.395,15.393-15.396h125.41v9.146h-98.41c-3.452,0-6.25,2.798-6.25,6.25 c0,3.452,2.798,6.25,6.25,6.25h98.41V184.479z"
                  ></path>
                  <path
                    d="M73.496,87.7v23.664c0,3.452,2.798,6.25,6.25,6.25h37.486c3.452,0,6.25-2.798,6.25-6.25V87.701 c8.258-3.315,13.982-11.413,13.982-20.669c0-11.935-9.437-21.706-21.24-22.244c-4.161-5.506-10.644-8.791-17.734-8.791 c-7.093,0-13.575,3.285-17.735,8.791c-11.804,0.538-21.241,10.31-21.241,22.244C59.514,76.289,65.239,84.386,73.496,87.7z M81.782,57.265c0.473,0,0.954,0.035,1.433,0.105c2.686,0.397,5.313-0.986,6.512-3.418c1.661-3.364,5.02-5.455,8.765-5.455 c3.744,0,7.103,2.091,8.766,5.457c1.2,2.432,3.839,3.811,6.513,3.416c0.476-0.07,0.956-0.105,1.429-0.105 c5.386,0,9.768,4.382,9.768,9.768c0,4.905-3.663,9.069-8.52,9.685c-3.122,0.396-5.463,3.053-5.463,6.2v22.196H85.996V83.331 c0-0.007,0.001-0.015,0.001-0.021c0.207-3.293-2.182-6.18-5.455-6.593c-4.862-0.613-8.528-4.776-8.528-9.685 C72.014,61.646,76.396,57.265,81.782,57.265z"
                  ></path>
                </g>
              </g></svg
            >
            <p class="text-sm font-semibold ml-3">Hot Recipes</p>
          </div>
          <h1 class="w-[460px] text-[64px] font-semibold mb-6 tracking-tighter">
            Spicy delicious chicken wings
          </h1>
          <p class="mb-7 text-gray-500 font-medium text-base w-[520px]">
            These mouthwatering wings are coated in a bold, fiery blend of
            spices that will kick your taste buds into high gear. Each wing is
            crispy on the outside
          </p>
          <div class="flex items-start mb-16">
            <div
              class="bg-[#00000008] rounded-3xl w-[145px] py-2 px-4 flex-center gap-[10px]"
            >
              <Image src={TimerIm} width={18} height={18} alt="timer-image" />
              <p>30 Minutes</p>
            </div>
            <div
              class="bg-[#00000008] rounded-3xl w-[145px] py-2 px-4 flex-center gap-[10px] ml-4"
            >
              <Image src={ForkIm} width={18} height={18} alt="fork-image" />
              <p>30 Minutes</p>
            </div>
          </div>
          <div class="flex">
            <div class="flex items-center w-[163px]"> 
                <Image src={Avatar} width={50} height={50} alt="avatar-image" class="mr-4" />
              <div class="flex flex-col">
                <p class="text-base font-bold mb-1 w-[100px]">John Smith</p>
                <p class="text-gray-400 text-xs font-bold mb-1">
                  15 March 2022
                </p>
              </div>
            </div>
            <button
              class="bg-black py-[18px] px-7 rounded-3xl w-52 h-15 text-white text-xs font-semibold flex-center gap-4 ml-[195px] cursor-pointer hover:brightness-75 transition-all"
            >
              View Recipes
              <Image src={watchIcon} width={20} height={20} alt="watch-image" />
            </button>
          </div>
        </div>
      </div>
      <div class="flex-center">
        <Image src={BannerImage} width={660} height={640} alt="banner-image" />
      </div>
    </div>
    <div class="bg-[#E7F9FD] h-[600px] w-10 rounded-tl-full rounded-bl-full">
    </div>
  </div>

  <style is:global>
    @import "../styles/global.css";
  </style>
</section>
