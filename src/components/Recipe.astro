---
import { Image } from "astro:assets";
import DefaultHeart from "../assets/Default-heart.png";
import FoodImage from "../assets/FoodIm.png";
import TimerImage from "../assets/Timer.png";
import ForkImage from "../assets/ForkKnife.png";
